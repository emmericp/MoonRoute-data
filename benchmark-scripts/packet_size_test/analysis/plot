#!/usr/bin/gnuplot

set terminal push
set terminal postscript eps enhanced color blacktext
set output "plot.eps"
set title "Influence of the packet size. 1.2GHz"
set xlabel "Size of packets [Bytes]"
set ylabel "Throughput [Gbit/s]"
set grid mxtics x
set grid mytics y
set key top left
#set key at 119,9.5
#set logscale y
#set logscale x


#set yrange [0.08:1]
set xrange [0:640]
set yrange [0:25]
#set xrange [115.5:119]
#set yrange [-10:15]
#set samples 1000

data = 'data'

#m = 1
#t = 1
#g(x) = m*x + t
#fit [1:2] g(x) 'data_2.0GHz' using 1:2:3 via m, t
#m2 = 1
#t2 = 1
#g2(x) = m2*x + t2
#fit [1:3] g2(x) 'data_2.0_randomGHz' using 1:2:3 via m2, t2
#m3 = 1
#t3 = 1
#g3(x) = m3*x + t3
#fit [1:4] g3(x) 'data_1.2GHz' using 1:2:3 via m3, t3
#m4 = 1
#t4 = 1
#g4(x) = m4*x + t4
#fit [1:5] g4(x) 'data_1.2_randomGHz' using 1:2:3 via m4, t4

bw=10
bw2=bw/2
set boxwidth bw
set style fill solid 0.1
set xtics (64, 128, 192, 256, 320, 384, 448, 512)

set y2label "Throughput [Mp/s]"
set ytics nomirror
set y2tics

set y2range [0:10]
set xrange [0:544+64]

plot \
  'data_2bitrnd'         using ($1-bw2):($2/1000):($3/1000) with boxerrorbars title "2 bit random Gbit/s",\
  'data'         using ($1+bw2):($2/1000):($3/1000) with boxerrorbars title "24 bit random Gbit/s",\
  'routebricks.dat'         using ($1):($3*0.4285/8) with linespoints title "RouteBricks Gbit/s" lc 6,\
  'data_2bitrnd'         using ($1):($2/($1+20)/8) axes x1y2 with linespoints lc 3 title "2 bit random Mp/s",\
  'data'         using ($1):($2/($1+20)/8) axes x1y2 with linespoints lc 4 title "24 bit random Mp/s",\
  'routebricks.dat'         using ($1):($3*1000*0.4285/8/($1+20)/8) axes x1y2 with linespoints lc 8 title "RouteBricks Mp/s"
  #g4(x-3*bw2) notitle lc 4

